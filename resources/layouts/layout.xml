<layout id="WatchFace">

    <drawable id="Background" class="Background">
    	<param name="borderColour">0xFFFFFF</param>
    </drawable>

    <label id="dateDisplay" x="center" y="13%" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE"/>

    <label id="timeDisplayHour" x="30%" y="25%" font="@Fonts.roboto" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />
    <label id="timeDisplayMinute" x="30%" y="50%" font="@Fonts.roboto" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />

    <label id="heartRateDisplay" x="75%" y="35%" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE"/>
    <label id="stepsDisplay" x="75%" y="47%" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE"/>
    <label id="stepGoalDisplay" x="75%" y="58%" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE"/>

    <label id="batteryDisplay" x="center" y="bottom" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE"/>
    <!-- <label id="weatherDisplay" x="left" y="center" font="Graphics.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_BLUE"/> -->
</layout>